{
	"name": "wwiser",
	"private": true,
	"version": "0.0.2",
	"description": "A collection of productivity tools for Wwise sound designers, powered by WAAPI",
	"author": "bbs",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/bbs/wwiser"
	},
	"keywords": [
		"wwise",
		"waapi",
		"audio",
		"sound-design",
		"game-audio",
		"tools"
	],
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "wrangler dev .svelte-kit/cloudflare/_worker.js --port 4173",
		"prepare": "pnpm run types && svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"types": "wrangler types"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/node": "^24",
		"@unocss/eslint-config": "^66.6.0",
		"@unocss/preset-wind4": "^66.6.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"lucide-svelte": "^0.562.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"unocss": "^66.6.0",
		"vite": "^7.2.6",
		"vitest": "^4.0.15",
		"wrangler": "^4.56.0"
	},
	"dependencies": {
		"@zag-js/combobox": "^1.33.0",
		"@zag-js/menu": "^1.33.0",
		"@zag-js/select": "^1.33.0",
		"@zag-js/svelte": "^1.33.0",
		"json5": "^2.2.3",
		"monaco-editor": "^0.55.1"
	}
}
